{
    "vars": {
        "distPath": "dist/",
        "resourcesPath": "app/"
    },

    "scss": "<=resourcesPath>scss/**/*.scss",
    "img": "<=resourcesPath>img/**/*.{png,jpg,jpeg,gif,svg,webp}",
    "frag": "<=resourcesPath>frag/*",
    "filters": "<=resourcesPath>filters/*.js",
    "audio": "<=resourcesPath>audio/*.mp3",

    "vendorJs": [
        "<=bowerComponentsPath>phaser/build/phaser.js"
    ],
    "appJs": [
        "<=resourcesPath>js/game/shake/*.js",
        "<=resourcesPath>js/game/shader/*.js",
        "<=resourcesPath>js/game/difficulty/*.js",
        "<=resourcesPath>js/game/audio/*.js",
        "<=resourcesPath>js/game/life/*.js",
        "<=resourcesPath>js/game/alien/*.js",
        "<=resourcesPath>js/game/cursor/*.js",
        "<=resourcesPath>js/game/*.js",
        "<=resourcesPath>js/*.js"
    ],

    "dist": {
        "css": "<=distPath>css",
        "js": "<=distPath>js",
        "img": "<=distPath>img",
        "frag": "<=distPath>frag",
        "filters": "<=distPath>filters",
        "audio": "<=distPath>audio"
    },

    "browserSupport": [
        "last 2 versions",
        "ie >= 9"
    ],

    "liveReloadFiles": [
        "<=distPath>css/style.min.css",
        "<=distPath>js/*.js"
    ]
}
